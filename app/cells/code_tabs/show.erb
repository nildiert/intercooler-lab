<!-- app/cells/code_tabs/show.html.erb -->
<div>
  <ul class="nav nav-tabs" id="codeTabs" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="html-tab" data-toggle="tab" href="#html" role="tab">HTML</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="ruby-tab" data-toggle="tab" href="#ruby" role="tab">Ruby</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="css-tab" data-toggle="tab" href="#css" role="tab">CSS</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="js-tab" data-toggle="tab" href="#js" role="tab">JavaScript</a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane fade show active" id="html" role="tabpanel">
      <pre><code class="html"><%= model[:html_content]&.html_safe %></code></pre>
    </div>
    <div class="tab-pane fade" id="ruby" role="tabpanel">
      <pre><code class="ruby"><%= model[:ruby_content]&.html_safe %></code></pre>
    </div>
    <div class="tab-pane fade" id="css" role="tabpanel">
      <pre><code class="css"><%= model[:css_content]&.html_safe %></code></pre>
    </div>
    <div class="tab-pane fade" id="js" role="tabpanel">
      <pre><code class="javascript"><%= model[:js_content]&.html_safe %></code></pre>
    </div>
  </div>
</div>
